<a id="dialog-form-action-{{uniqid}}" href="#" title="{{title}}"
  data-form-url="{{formurl}}" data-dialog-name="{{dialogname}}" data-after-submit="{{aftersubmit}}"
>{{{icon}}}</a>

{{#js}}
require([
    'jquery',
    'local_openlms/dialog_form',
], function($, DialogForm) {
    var actionIcon = $('#dialog-form-action-' + "{{uniqid}}"),
        formUrl = actionIcon.data('form-url'),
        dialogName = actionIcon.data('dialog-name'),
        afterSubmit = actionIcon.data('after-submit');

    actionIcon.on('click', function() {
        new DialogForm({
            modalConfig: {title: dialogName},
            triggerElement: actionIcon,
            formUrl: formUrl,
            afterSubmit: afterSubmit,
        });
    });
});
{{/js}}
