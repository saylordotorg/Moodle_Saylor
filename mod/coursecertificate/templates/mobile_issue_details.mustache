{{!
    @template mod_coursecertificate/mobile_issue_details

    Template for showing the certificate issue details in the mobile app.

    Example context (json):
    {
        "fullname": "Test User",
        "email": "user@test.com",
        "status": "1",
        "statusstring": "Valid",
        "timecreated": "3 December 2021, 2:16 PM",
        "expires": "Never",
        "code": "9448292828AU",
        "previewurl": "http://test.com/admin/tool/certificate/view.php?code=9448292828AU",
        "verifyurl": "http://test.com/admin/tool/certificate/index.php?code=9448292828AU"
    }
}}
{{=<% %>=}}
<ion-list>
    <ion-item>
        <ion-label>
            <h2>{{ 'plugin.mod_coursecertificate.user' | translate }}</h2>
            <p><%fullname%></p>
        </ion-label>
    </ion-item>
    <ion-item>
        <ion-label>
            <h2>{{ 'plugin.mod_coursecertificate.email' | translate }}</h2>
            <p><%email%></p>
        </ion-label>
    </ion-item>
    <ion-item>
        <ion-label>
            <h2>{{ 'plugin.mod_coursecertificate.status' | translate }}</h2>
            <p><%statusstring%></p>
        </ion-label>
    </ion-item>
    <ion-item>
        <ion-label>
            <h2>{{ 'plugin.mod_coursecertificate.issueddate' | translate }}</h2>
            <p><%timecreated%></p>
        </ion-label>
    </ion-item>
    <ion-item>
        <ion-label>
            <h2>{{ 'plugin.mod_coursecertificate.expirydate' | translate }}</h2>
            <p><%expires%></p>
        </ion-label>
    </ion-item>
    <ion-item>
        <ion-label>
            <h2>{{ 'plugin.mod_coursecertificate.code' | translate }}</h2>
            <p><%code%></p>
        </ion-label>
        <ion-button core-link href="<%verifyurl%>"> Verify </ion-button>
    </ion-item>
</ion-list>
<ion-button core-link href="<%previewurl%>" class="button-block ion-margin-left ion-margin-top ion-padding-horizontal">{{ 'plugin.mod_coursecertificate.preview' | translate }}</ion-button>
