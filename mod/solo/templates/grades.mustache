{{!
  @template mod_solo/grades

  Displays student submissions to be graded.

  The purpose of this template is to display submissions by students to be graded.
}}
<link rel="stylesheet" type="text/css" href="//cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css"/>
<div class="mod_solo_totalgradeables"><h3>{{# str }} totalgradeables, mod_solo,{{totalgradeables}} {{/ str }}</h3></div>
<table cellpadding="0" cellspacing="0" width="100%" class="table table-striped" id="mod_solo_grade_submissions_table">
    <thead>
    <tr>
        <th>{{# str }} gradeslast, mod_solo {{/ str }}</th>
        <th>{{# str }} gradesfirst, mod_solo {{/ str }}</th>
        <th>{{# str }} gradesclarity, mod_solo {{/ str }}</th>
        <th>{{# str }} gradeswords, mod_solo {{/ str }}</th>
        <th>{{# str }} gradestargetwords, mod_solo {{/ str }}</th>
        <th>{{# str }} gradesmethod, mod_solo {{/ str }}</th>
        <th>{{# str }} gradesgrade, mod_solo {{/ str }}</th>
        <th>{{# str }} gradesactions, mod_solo {{/ str }}</th>

    </tr>
    </thead>
    <tfoot>
    <tr>
        <th>{{# str }} gradeslast, mod_solo {{/ str }}</th>
        <th>{{# str }} gradesfirst, mod_solo {{/ str }}</th>
        <th>{{# str }} gradesclarity, mod_solo {{/ str }}</th>
        <th>{{# str }} gradeswords, mod_solo {{/ str }}</th>
        <th>{{# str }} gradestargetwords, mod_solo {{/ str }}</th>
        <th>{{# str }} gradesgrader, mod_solo {{/ str }}</th>
        <th>{{# str }} gradesgrade, mod_solo {{/ str }}</th>
        <th>{{# str }} gradesactions, mod_solo {{/ str }}&nbsp;</th>

    </tr>
    </tfoot>
    <tbody id="history-table-body">
    {{#data}}
        <tr data-history-id="{{id}}" class="history-row">
            <td>{{lastname}}</td>
            <td>{{firstname}}</td>
            <td>{{aiaccuracy}}</td>
            <td>{{words}}</td>
            <td>{{targetwords}}/{{totaltargetwords}}</td>
            <td>{{grader}}</td>
            <td class="m-0">{{grade}}</td>
            <td>
                {{#methodrubric}}
                <a href="gradesubmissions.php?id={{cmid}}&userid={{userid}}&grademethod=rubric">
                <button type="button" class="btn btn-primary">
                    {{# str }} gradesgrade, mod_solo {{/ str }}
                </button>&nbsp;</a>
            {{/methodrubric}}
                {{#methodsimple}}
                    <a href="gradesubmissions.php?id={{cmid}}&userid={{userid}}&grademethod=simple">
                        <button type="button" class="btn btn-primary">
                            {{# str }} gradesgrade, mod_solo {{/ str }}
                        </button>&nbsp;</a>
                {{/methodsimple}}
                <a href="reports.php?id={{cmid}}&attemptid={{attemptid}}&format=html&report=singleattempt">
                    <button type="button" class="btn btn-primary">
                        {{# str }} viewattempt, mod_solo {{/ str }}
                    </button>&nbsp;</a>
            </td>
        </tr>
    {{/data}}
    </tbody>
</table>

{{#js}}
    require([
    "jquery",
    'https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js',
    ], function ($, datatable) {
    let table = $("#mod_solo_grade_submissions_table").dataTable();
    });
{{/js}}