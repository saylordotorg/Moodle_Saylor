{{! Terms are organised as follows:
<div class="term-wrapper">
   <div class="term">
      <div class="term-header">
         <div class="term-title"></div>
         <div class="term-tick"></div>
      </div>
      <div class="term-body"></div>
   </div>
</div>
}}
{{{optshtml}}}
<div class="mt-3 mod_wordcards_activity_header">
    {{#freemodeavailable}}
        {{^isfreemode}}
            <a href="{{config.wwwroot}}/mod/wordcards/freemode.php?id={{cmid}}" class="btn btn-outline-primary pull-right">
                <i class='fa fa-random mr-1'></i>
                {{#str}}freemode, mod_wordcards{{/str}}
            </a>
        {{/isfreemode}}
    {{/freemodeavailable}}
    {{#stepsmodeavailable}}
        {{^isstepsmode}}
            <a href="{{config.wwwroot}}/mod/wordcards/view.php?id={{cmid}}" class="btn btn-outline-primary pull-right">
            <i class='fa fa-random mr-1'></i>
            {{#str}}stepsmode, mod_wordcards{{/str}}
            </a>
        {{/isstepsmode}}
    {{/stepsmodeavailable}}
    <h3>{{{introheading}}}</h3>
    <div class="mod_wordcards_instructions">
        {{#introstrings}}
            <p>{{.}}</p>
        {{/introstrings}}
    </div>
</div>
<div class="text-right mt-2">
        <span class="wordcards_display_options">
            <button class="wordcards_display_option event_grid btn btn-primary" id="btn" title="{{#str}}grid, mod_wordcards{{/str}}">
                <i class="fa fa-th"></i>
            </button>
            <button class="wordcards_display_option event_flashcards btn btn-outline-primary" title="{{#str}}flashcards, mod_wordcards{{/str}}">
                <i class="fa fa-clone"></i>
            </button>
        </span>
</div>
<div id="definitions-page-{{uniqid}}" class="definitions-container">
    <div class="mt-3">
    <div class="terms clearfix definition_grid">
       {{#definitions}}
       <div class="term-wrapper">
          <div class="term {{#seen}}term-seen{{/seen}}" data-termid="{{id}}">
             <div class="term-header">
                 {{>mod_wordcards/my_words_button}}
                <div class="term-title">
                    {{term}}
                    <i style="cursor:pointer;" data-modelaudio="{{audio}}" data-tts="{{term}}" data-ttsvoice="{{ttsvoice}}" class="fa fa-volume-up definition-play-tts"></i>
                </div>
                {{#model_sentence}}
                <div class="term-modelsentence">
                   <span style="cursor:pointer;" data-modelaudio="{{model_sentence_audio}}" data-tts="{{model_sentence}}" data-ttsvoice="{{ttsvoice}}" class="model-sentence-play-tts"> {{model_sentence}}</span>
                </div>
                {{/model_sentence}}
             </div>
             <div class="term-body">
                {{{definition}}}
             </div>
          </div>
       </div>
       {{/definitions}}
    </div>
    <div class="terms clearfix definition_flashcards" style="display:none;">
       <!--start --->
       <div class="df_fl">
          <ul class="definition_flashcards_ul">
             {{#definitions}}
             <li>
                <div class="row">
                   {{#image}}
                   <div class="col-md-6">
                      <img src="{{image}}" class="flash_img" alt=""/>
                   </div>
                   {{/image}}
                   <div class="{{#image}}col-md-6{{/image}} {{^image}}col-md-12{{/image}}">
                      <div class="term-wrapper {{#image}}add_wraper_handle_im{{/image}} {{^image}}add_wraper_handle{{/image}}">
                         <div class="term {{#seen}}term-seen{{/seen}}" data-termid="{{id}}">
                            <div class="term-header">
                                {{>mod_wordcards/my_words_button}}
                               <div class="term-title">{{term}} <i style="cursor:pointer;" data-modelaudio="{{audio}}" data-tts="{{term}}" data-ttsvoice="{{ttsvoice}}" class="fa fa-volume-up definition-play-tts"></i></div>
                               {{#model_sentence}}
                               <div class="term-modelsentence">
                                  <span style="cursor:pointer;" data-modelaudio="{{model_sentence_audio}}" data-tts="{{model_sentence}}" data-ttsvoice="{{ttsvoice}}" class="model-sentence-play-tts"> {{model_sentence}}</span>
                               </div>
                               {{/model_sentence}}
                            </div>
                            <div class="term-body">
                                {{{definition}}}
                            </div>
                         </div>
                      </div>
                   </div>
                </div>
             </li>
             {{/definitions}}
          </ul>
          </div>
          <div class="df_fl_control" style="text-align: center;">
             <button id="Prev"  style="float: left;" title="Prev"> <i class="text-primary fa fa-angle-double-left" aria-hidden="true"></i> </button>
              <span class="wc_cardsprogress"> -- / -- </span>
             <button id="Next" style="float: right;" title="Next"> <i class="text-primary fa fa-angle-double-right" aria-hidden="true"></i></button>
          </div>
          <!--end --->
       </div>
       <div class="page-footer">
        {{#isstepsmode}}
           {{#nexturl}}
               <button data-href="{{{nexturl}}}" data-action="{{nextaction}}" class="definitions-next btn btn-primary btn-lg btn-block">
                   {{nextbuttontext}}  <i class="fa fa-arrow-right"></i>
               </button>
           {{/nexturl}}
        {{/isstepsmode}}
          <audio id="poodll_vocabplayer"></audio>
       </div>
    </div>
</div>