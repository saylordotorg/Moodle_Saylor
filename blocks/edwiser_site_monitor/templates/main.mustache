{{!
    @template block_edwiser_site_monitor/main

    This template renders live status tab

    Example context (json):
    {
        "live_status" : "<div>live_status</div>"
        "last_24_hours_usage" : "<div>last_24_hours_usage</div>"
        "installnewurl" : "<site>/admin/tool/installaddon/index.php"
        "lasttime" : "<div>lasttime</div>"
        "recommendation" : "<div>recommendation</div>"
        "contactus" : "<div>contactus</div>"
    }
}}
<div class="edwiser_site_monitor">
    <div class="w-p100 d-flex my-10" id="edwiser_site_monitor-section">
        <ul class="nav nav-tabs nav-tabs-line border-0 mx-15 w-full" role="tablist">
            <li class="nav-item active">
                <a class="nav-link active" href="#edwiser_site_monitor_view_live_status" data-container="edwiser_site_monitor_view_live_status" data-toggle="tab">
                    {{#str}} liveusage, block_edwiser_site_monitor {{/str}}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#edwiser_site_monitor_last_24_hours_usage" data-container="edwiser_site_monitor_last_24_hours_usage" data-toggle="tab">
                    {{#str}} last24hoursusage, block_edwiser_site_monitor {{/str}}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#edwiser_site_monitor_plugins" data-container="edwiser_site_monitor_plugins" data-toggle="tab">
                    {{#str}} pluginsoverview, core_admin {{/str}}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link esm-outline" href="#edwiser_site_monitor_recommendation" data-container="edwiser_site_monitor_recommendation" data-toggle="tab">
                    {{#str}} recommendation, block_edwiser_site_monitor {{/str}}
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#edwiser_site_monitor_contactus" data-container="edwiser_site_monitor_contactus" data-toggle="tab">
                    {{#str}} contactus, block_edwiser_site_monitor {{/str}}
                </a>
            </li>
        </ul>
    </div>
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane fade show active" id="edwiser_site_monitor_view_live_status">
            <div class="mt-3 align-items-left justify-content-center flex-column">
                {{{ live_status }}}
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="edwiser_site_monitor_last_24_hours_usage">
            <div class="mt-3 align-items-center justify-content-center flex-column">
                {{{ last_24_hours_usage }}}
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="edwiser_site_monitor_plugins">
            <div class="mt-3 align-items-center justify-content-center flex-column">
                <div id="page-admin-plugins" class="server-plugins has-loader">
                    <a target="_blank" href="{{installnewurl}}" class='btn btn-secondary'>{{#str}} installnew, block_edwiser_site_monitor {{/str}}</a>
                    <button class='btn btn-secondary refresh-plugin-list'>{{#str}} checkforupdates, core_plugin {{/str}}</button>
                    <label class="lasttimefetched">{{{lasttime}}}</label>
                    <div class="server-plugins-list">
                    </div>
                    <div class="edwiser-server-monitor-loader">
                        <div class="edwiser-server-monitor-loading-icon">
                            <i class="fa fa-circle-o-notch fa-spin fa-fw" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="edwiser_site_monitor_recommendation">
            <div class="mt-3 align-items-center justify-content-center flex-column">
                {{{ recommendation }}}
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="edwiser_site_monitor_contactus">
            <div class="mt-3 align-items-center justify-content-center flex-column has-loader">
                {{{ contactus }}}
                <div class="edwiser-server-monitor-loader">
                    <div class="edwiser-server-monitor-loading-icon">
                        <i class="fa fa-circle-o-notch fa-spin fa-fw" aria-hidden="true"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
